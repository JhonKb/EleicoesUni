<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EleicoesUni.View.ViewTurma">
    <StackLayout BackgroundColor="LightGray">

        <StackLayout >
            <Frame BackgroundColor="MediumBlue">
                <StackLayout BackgroundColor="MediumBlue">
                    
                    <Image HorizontalOptions="Center" Source="logo.png" Margin="20"/>
                    <Label Text="UNIFACEMA" HorizontalTextAlignment="Center" TextColor="White" FontSize="40" FontAttributes="Bold"/>
                    <Label Text="ELEIÇÕES" HorizontalTextAlignment="Center" TextColor="White" FontSize="30"  Margin="0,-10,0,20"/>

                </StackLayout>
            </Frame>
        </StackLayout>
        <ScrollView>
            <StackLayout>
                <Label x:Name="nomeTurma" HorizontalTextAlignment="Center" TextColor="Black" FontSize="25" Margin="0,20,0,10"/>
                <Frame CornerRadius="20" Margin="20">

                    <StackLayout>
                        
                        <Label Text="CHAPA 1" HorizontalTextAlignment="Start" TextColor="DimGray" FontSize="25" />
                        <Label x:Name="nomeLider" HorizontalTextAlignment="Start" TextColor="LightSlateGray" FontSize="20" />
                        <Label Text="Líder" HorizontalTextAlignment="Start" TextColor="LightGray" FontSize="17" Margin="0,-10,0,5"/>
                        <Label x:Name="nomeVice" HorizontalTextAlignment="Start" TextColor="LightSlateGray" FontSize="20" />
                        <Label Text="Vice-Líder" HorizontalTextAlignment="Start" TextColor="LightGray" FontSize="17" Margin="0,-10,0,5"/>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                            <ProgressBar x:Name="barraProgresso" Progress="0.3" ProgressColor="Green" Grid.Column="0"/>
                            <Label x:Name="barraaPorcentagem" HorizontalOptions="Start" VerticalTextAlignment="Center" TextColor="Black" FontSize="12" Grid.Column="1"/>
                            <Button Text="Votar" TextColor="White" BackgroundColor="MediumBlue" CornerRadius="10" FontSize="16" Grid.Column="2"/>
                        </Grid>
                    </StackLayout>
                </Frame>
               
            </StackLayout>
        </ScrollView>
    </StackLayout>
</ContentPage>