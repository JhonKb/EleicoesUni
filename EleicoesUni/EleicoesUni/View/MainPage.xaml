<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EleicoesUni.MainPage">

    <StackLayout BackgroundColor="LightGray">

        <StackLayout BackgroundColor="MediumBlue">
            <Path HorizontalOptions="Center" Fill="LightGray" Stroke="white" Margin="0,60,0,0">
                
                <Path.Data>
                    
                    <EllipseGeometry Center="50,50" RadiusX="50" RadiusY="50"/>
                    
                </Path.Data>
                
            </Path>
            <Frame BackgroundColor="MediumBlue" Padding="20,20,20,0" CornerRadius="0" Margin="0">

                <Label Text="ELEIÇÕES" HorizontalTextAlignment="Center" TextColor="White" FontSize="40" FontAttributes="Bold"/>

            </Frame>
            <Frame BackgroundColor="MediumBlue" Padding="0,-15,0,120" CornerRadius="0" Margin="0">

                <Label Text="UNIFACEMA" HorizontalTextAlignment="Center" TextColor="White" FontSize="25"/>

            </Frame>
        </StackLayout>
        <StackLayout>
            <StackLayout Margin="20,-100,20,20">

                <Frame CornerRadius="20">

                    <StackLayout>
                        
                        <Label Text="BEM VINDO!" HorizontalTextAlignment="Center" TextColor="Black" FontSize="25" Margin="0,0,0,20"/>
                        <Label Text="Selecione uma turma abaixo:" HorizontalTextAlignment="Center" TextColor="DarkSlateGray" FontSize="17" Margin="0,10,0,10"/>
                        <Frame CornerRadius="50" BackgroundColor="LightGray">
                            <Picker x:Name="turma" Title="Selecionar" TitleColor="LightSlateGray" Margin="0,-20,0,-20" FontSize="17"/>
                        </Frame>
                        <Button TextColor="White" BackgroundColor="MediumBlue" CornerRadius="50" Text="Avançar" Margin="0,20,0,20" FontSize="16"/>
                        
                    </StackLayout>
                </Frame>
            </StackLayout>
            <StackLayout>
                <Button TextColor="White"  CornerRadius="50" BackgroundColor="MediumBlue" Text="Cadastrar eleição" Margin="40,20,40,0" FontSize="16"/>
                <Label HorizontalOptions="Center" Text="* Acesso restrito" TextColor="DarkRed"></Label>
            </StackLayout>
        </StackLayout>
    </StackLayout>

</ContentPage>
