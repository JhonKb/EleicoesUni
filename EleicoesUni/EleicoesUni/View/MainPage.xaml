<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EleicoesUni.MainPage">

    <StackLayout BackgroundColor="LightGray">

        <StackLayout >
            <Frame BackgroundColor="MediumBlue">
                <StackLayout BackgroundColor="MediumBlue">
                    <Path HorizontalOptions="Center" Fill="LightGray" Stroke="white" Margin="0,40,0,20">

                        <Path.Data>

                            <EllipseGeometry Center="50,50" RadiusX="50" RadiusY="50"/>

                        </Path.Data>

                    </Path>
                    <Label Text="ELEIÇÕES" HorizontalTextAlignment="Center" TextColor="White" FontSize="36" FontAttributes="Bold"/>
                    <Label Margin="0,-10,0,100" Text="UNIFACEMA" HorizontalTextAlignment="Center" TextColor="White" FontSize="21"/>
                </StackLayout>
            </Frame>
        </StackLayout>
        <StackLayout>
            <Frame CornerRadius="20" Margin="20,-100,20,20">

                <StackLayout>

                    <Label Text="BEM VINDO!" HorizontalTextAlignment="Center" TextColor="Black" FontSize="20" Margin="0,0,0,10"/>
                    <Label Text="Selecione uma turma abaixo:" HorizontalTextAlignment="Center" TextColor="DarkSlateGray" FontSize="16" Margin="0,0,0,10"/>
                    <Frame CornerRadius="50" BackgroundColor="LightGray">
                        <Picker x:Name="turma" Title="Selecionar" TitleColor="LightSlateGray" Margin="-5,-20,-5,-20" FontSize="14" TextColor="LightSlateGray"/>
                    </Frame>
                    <Button Clicked="Button_Avancar" TextColor="White" BackgroundColor="MediumBlue" CornerRadius="50" Text="Avançar" Margin="0,20,0,20" FontSize="16"/>

                </StackLayout>
            </Frame>
            <StackLayout>
                <Button Clicked="Button_Cadasto" TextColor="White"  CornerRadius="50" BackgroundColor="MediumBlue" Text="Cadastrar eleição" Margin="40,20,40,0" FontSize="16"/>
                <Label HorizontalOptions="Center" Text="* Acesso restrito" TextColor="DarkRed"/>
            </StackLayout>
        </StackLayout>
    </StackLayout>

</ContentPage>
