<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EleicoesUni.MainPage">

    <StackLayout>
        <StackLayout>
            <Image></Image>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            
                <Label Text="Eleições Unifacema" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        </StackLayout>
        <Label Text="Escolha eleição de turma" HorizontalTextAlignment="Center" FontSize="Title" Padding="30,10,30,10"/>

        <StackLayout Padding="30,10,30,10">
            <Picker Title="Escolha sua turma" x:Name="turma"></Picker>
            <Button Text="Selecionar"></Button>
        </StackLayout>
       
        
          
    </StackLayout>

</ContentPage>
