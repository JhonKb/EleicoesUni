             x:Class="EleicoesUni.View.TurmaView">
    <Grid>
        <StackLayout>
            <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
        </StackLayout>
        <BoxView 
    x:Name="TelaPreta" 
